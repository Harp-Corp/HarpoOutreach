# HarpoOutreach - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to the repository!

# Google OAuth 2.0 (Desktop Client from Google Cloud Console)
# Project: eMailWorkflow (emailworkflow-487516)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Perplexity AI API Key (from perplexity.ai/account/api/keys)
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# Google Spreadsheet ID for tracking
GOOGLE_SPREADSHEET_ID=your-spreadsheet-id

# Email sender settings (optional - defaults shown)
SENDER_EMAIL=mf@harpocrates-corp.com
SENDER_NAME=Martin Foerster

# Server settings (optional - defaults shown)
SERVER_BASE_URL=http://localhost:8080
